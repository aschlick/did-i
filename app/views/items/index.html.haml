.columns.is-multiline
  -@items.each do |i|
    .column.is-one-third-desktop.is-half-tablet
      .box
        .columns
          .column
            %p= i.name
          .column.is-one-fourth
            %p= i.last_replaced_at.try(:strftime, '%D')
          .column
            .field.has-addons
              %p.control
                %button.button.is-info.replace-item{ 'data-id': i.id } Replace
              %p.control
                = link_to edit_item_url(i.id), { class: 'button is-info is-outlined' } do
                  %span.icon.is-small
                    %i.fa.fa-ellipsis-v

  .column.is-one-third-desktop.is-half-tablet
    .box
      = link_to 'New', new_item_url, { class: 'button is-primary button-block', method: :get }
